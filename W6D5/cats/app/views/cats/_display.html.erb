<ul>
  <% cats.each do |cat| %>
  
    <li>Name: <%= cat.name %></li>
    <li>Birthdate: <%= cat.birth_date %></li>
    <li>Color: <%= cat.color %></li>
    <li>Sex: <%= cat.sex %></li>
    <li>Description: <%= cat.description %></li>
    <% if type == :show  %>
      <li><select>
        <% cat.cat_rental_requests.order(:start_date).each do |request| %>
          <option><%= request.start_date %> to <%= request.end_date %></option>
        <% end  %>
      </select></li>
    <% end %>
  <br>
  <% end %>
</ul>