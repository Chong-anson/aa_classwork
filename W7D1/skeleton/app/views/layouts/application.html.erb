<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h2><%= current_user.username if logged_in? %></h2>
    
    <form action="<%= logged_in? ? session_url : new_session_url %>" method="<%= logged_in? ? "POST" : "GET" %>">
      <% if logged_in? %>
        <input type="hidden" name="_method" value="DELETE">
      <% end %>
      <input type="submit" value="<%= logged_in? ? "Log Out" : "Log In" %>">
    </form>

    <%= yield %>

  </body>
</html>
